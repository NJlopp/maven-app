pipeline {
    agent any

    stages {
        stage('Build JAR') {
            steps {
                buildJar()
            }
        }

        stage('Docker Login') {
            steps {
                dockerLogin()
            }
        }

        stage('Build Docker Image') {
            steps {
                dockerBuildImage('lop/jma:3.0')
            }
        }

        stage('Push Docker Image') {
            steps {
                dockerPush('lop/jma:3.0')
            }
        }
    }
}
